<%-   include('header')   -%>

<h1 class="placeOrder-h1">Stock Update Details</h1>

<form class="newplaceorderform"  autocomplete="off" action="/updatestock2" method="POST" >
    <div class="form-row">
      <div class="col-6 autocomplete">
        <input type="text" id="myInput" class="form-control poslot" placeholder="Name" name="myCountry">
      </div>
      <div class="col">
        <input type="Number" class="form-control poslot" placeholder="Quantity" name="medq">
      </div>
      <div class="col">
        <button type="submit" name="add" class="btn btn-primary poslot">Add</button>
    </div>
     
    </div>
</form>

<div class="row">
    <div class="col">
        <div class="col">
            <table class="table" id="table-edit2">
                <thead>
                    <tr>
                    <th scope="col">MEDICINE CATEGORY</th>
                    <th scope="col">MEDICINE NAME</th>
                    <th scope="col">MEDICINE QUANTITY</th>
                    <th scope="col">MEDICINE PRICE</th>
                    </tr>
                </thead>
                <tbody id="table-content">
                    <% for(var i=0;i < items.length ; i++){ %>
                        <tr>
                            <th scope="col"><%=items[i].category%></th>
                            <th scope="col"><%=items[i].name%></th>
                            <th scope="col"><%=items[i].quantity%></th>
                            <th scope="col"><%=items[i].cost%></th>
                        </tr>
                    <%}%>
                </tbody>
            </table>
        </div>
    </div>
</div>


<% if(items.length >= 1) { %>


<div class="placeorderbutton">
    <a href="/updatestock" >
        <button class="btn btn-info btn-lg place">UPDATE STOCK</button>
    </a>
</div>
<%}%>


<%-   include('footer')   -%>

